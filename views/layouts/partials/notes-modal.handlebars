<!--Notes Modal-->

<div class="modal fade modalNote" id="noteModal{{this._id}}" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            
            <div class="modal-body">
                {{#if this.notes}}
                    {{#each this.notes}}
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <p class="savedNotes"> {{this.body}}</p>
                                <button type="button" class="btn btn-danger deleteNote" data-note-id={{this._id}} data-article-id={{this.article}}>X</button>
                            </div>
                        </div>
                    {{/each}}
                {{else}}
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <h4>Notes is empty.</h4>
                        </div>
                    </div>
                {{/if}}
                <div class="form-group">
                    <textarea id="noteText{{this._id}}" class="form-control" rows="2" placeholder="New Note"></textarea>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary saveNote" data-id={{this._id}}>Save</button>
            </div>
        </div>
    </div>
</div>