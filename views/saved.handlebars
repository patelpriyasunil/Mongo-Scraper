

    <div class="col-md-12 jumbotron" id="Jumbo">
        <div class="text-center">
            <h1> Mongo Scraper</h1>
            <h3>Saved Articles</h3>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <button id="ntbtn" type="button" class="btn btn-primary addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button  id="dltbtn" type="button" class="btn btn-danger delete" data-id={{this._id}}>Delete</button>
                        <h4>{{this.title}}</h4>
                        <p> {{this.summary}}</p>
                        <a href={{this.link}} target="_blank">{{this.link}}</a>
                        
                    </div>
                    
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>No saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>

{{#each article}}
    {{> notes-modal }}
{{/each}}